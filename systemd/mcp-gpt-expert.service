[Unit]
Description=MCP GPT Expert Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/shogo/prog/mcp-gpt-expert
EnvironmentFile=/home/shogo/prog/mcp-gpt-expert/.env
ExecStart=/usr/bin/node /home/shogo/prog/mcp-gpt-expert/dist/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target
